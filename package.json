{
  "name": "xslt-transformer",
  "displayName": "UBL Validator",
  "description": "Transform XML with XSLT and validate UBL 2.1 documents (XSD + EN16931 + Peppol BIS 3.0). Only requires Java â€” everything else is bundled.",
  "version": "2.0.0",
  "publisher": "AndreiVasilcin",
  "author": {
    "name": "Andrei Vasilcin"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vasilcinandrei/xslt-transformer-vscode"
  },
  "bugs": {
    "url": "https://github.com/vasilcinandrei/xslt-transformer-vscode/issues"
  },
  "homepage": "https://github.com/vasilcinandrei/xslt-transformer-vscode#readme",
  "icon": "icon.png",
  "keywords": [
    "xslt",
    "xml",
    "ubl",
    "validation",
    "en16931",
    "peppol",
    "invoice",
    "schematron",
    "xsd"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xslt-transformer.transform",
        "title": "XSLT: Transform XML",
        "icon": "$(symbol-misc)"
      },
      {
        "command": "xslt-transformer.validateUbl",
        "title": "UBL: Validate Document",
        "icon": "$(check-all)"
      },
      {
        "command": "xslt-transformer.validateUblXsd",
        "title": "UBL: Validate XSD Only"
      },
      {
        "command": "xslt-transformer.validateUblBusinessRules",
        "title": "UBL: Validate Business Rules Only"
      },
      {
        "command": "xslt-transformer.aiFixAll",
        "title": "UBL: Fix All Errors with AI"
      },
      {
        "command": "xslt-transformer.aiSetApiKey",
        "title": "UBL: Set AI API Key"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "xslt-transformer.transform",
          "group": "navigation"
        },
        {
          "command": "xslt-transformer.validateUbl",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "xslt-transformer.transform"
        },
        {
          "command": "xslt-transformer.validateUbl"
        },
        {
          "command": "xslt-transformer.validateUblXsd"
        },
        {
          "command": "xslt-transformer.validateUblBusinessRules"
        },
        {
          "command": "xslt-transformer.aiFixAll"
        },
        {
          "command": "xslt-transformer.aiSetApiKey"
        }
      ]
    },
    "configuration": {
      "title": "UBL Validator AI",
      "properties": {
        "ublValidator.ai.provider": {
          "type": "string",
          "enum": ["gemini", "groq", "anthropic", "openai"],
          "default": "gemini",
          "description": "AI provider to use for fix suggestions. Gemini and Groq are free, Anthropic and OpenAI are paid."
        },
        "ublValidator.ai.model": {
          "type": "string",
          "default": "",
          "description": "Model to use (leave empty for provider default: gemini-2.0-flash for Gemini, llama-3.3-70b-versatile for Groq, claude-sonnet-4-20250514 for Anthropic, gpt-4o for OpenAI)."
        },
        "ublValidator.ai.maxRetries": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of retry attempts if a fix does not resolve the error."
        }
      }
    },
    "keybindings": [
      {
        "command": "xslt-transformer.validateUbl",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:java && npm run compile",
    "compile": "tsc -p ./",
    "compile:java": "javac -source 8 -target 8 -d lib/classes java/XsdValidator.java",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
